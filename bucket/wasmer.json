{
    "version": "1.0.2",
    "description": "Universal WebAssembly Runtime supporting WASI and Emscripten",
    "homepage": "https://wasmer.io/",
    "license": "MIT",
    "architecture": {
        "64bit": {
            "url": "https://github.com/wasmerio/wasmer/releases/download/1.0.2/wasmer-windows.exe",
            "hash": "f95ec0f061c2ce974fdb3e62245f0a889ec7e5cbbb3288a51e7dba87215ea923"
        }
    },
    "innosetup": true,
    "env_set": {
        "WASMER_DIR": "$dir\\data",
        "WASMER_CACHE_DIR": "$dir\\data\\cache"
    },
    "persist": "data",
    "bin": [
        "bin\\wax.cmd",
        "bin\\wapm.exe",
        "bin\\wasmer.exe"
    ],
    "checkver": {
        "github": "https://github.com/wasmerio/wasmer",
        "regex": "tag/([\\w.-]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/wasmerio/wasmer/releases/download/$version/wasmer-windows.exe"
            }
        }
    }
}
